<% title("Spartans Online Academy - #{@organization_member.organization}") %>

<% body_class("organization") %>
<% content_for(:scripts) do %>
  <%= javascript_include_tag("https://js.stripe.com/v1/") %>  
  <script type="text/javascript">
  //<![CDATA[
    $(function() {      
      Stripe.setPublishableKey("<%= STRIPE_PUBLISHABLE_KEY %>");
      var organization_member = lll.models.organizationMembers.get(<%= @organization_member.id %>);
      var view = new lll.views.OrganizationMemberPaymentView({
        el: $("#main")[0],
        model: organization_member
      });
      view.render();
    });
  //]]>
  </script>
<% end %>
